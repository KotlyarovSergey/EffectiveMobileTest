<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ksv.effectivemobiletest.presentation.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_courseFragment"
            app:destination="@id/courseFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.ksv.effectivemobiletest.presentation.FavouritesFragment"
        android:label="FavouritesFragment" >
        <action
            android:id="@+id/action_favouritesFragment_to_courseFragment"
            app:destination="@id/courseFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.ksv.effectivemobiletest.presentation.AccountFragment"
        android:label="AccountFragment" />
    <fragment
        android:id="@+id/courseFragment"
        android:name="com.ksv.effectivemobiletest.presentation.course.CourseFragment"
        android:label="CourseFragment" />
</navigation>